---
// Este es el layout principal para el esquema del Astillero Digital
import '../styles/global.css';
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Astillero Digital</title>
  </head>
  <body class="antialiased bg-gradient-to-r from-background to-surface text-text">
    <header class="p-4 text-center bg-surface shadow-md">
      <h1 class="text-3xl font-bold">Astillero Digital</h1>
      <nav class="mt-4">
        <ul class="flex justify-center space-x-4">
          <li><a href="#puerto-base" class="text-primary hover:underline">Puerto Base</a></li>
          <li><a href="#lagunas" class="text-primary hover:underline">Lagunas</a></li>
          <li><a href="#rios-rapidos" class="text-primary hover:underline">Ríos y Rápidos</a></li>
        </ul>
      </nav>
    </header>
    <main class="p-8 max-w-7xl mx-auto">
      <slot />
    </main>
    <footer class="text-center text-sm text-text-muted py-4 bg-surface">
      <p>Astillero Digital 2025</p>
    </footer>
  </body>
</html>
